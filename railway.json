{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "USERNAME": "argus",
    "PASSWORD": "change-me",
    "ARGUS_REPO": "https://github.com/jasonxtn/argus.git",
    "ARGUS_REF": "main"
  }
}
